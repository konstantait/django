{% extends 'layouts/base.html' %}
{% load static %}
{% block content %}
<div class="p-5">
<h4>Favorites</h4>
<table class="table align-middle">
  <tbody>
  {% for favorite in favorites %}
  <tr>
    <th scope="row">
      <a href="{{ favorite.product.get_absolute_url }}">
        <img src="{{ favorite.product.image.url }}" width="128">
      </a>
    </th>
    <td>{{ favorite.product.name }}</td>
    <td>
      <form action="{% url 'favorites:remove' favorite.product.id %}" method="post">
        <input class="btn btn-light" type="submit" value="Remove">
        {% csrf_token %}
      </form>
    </td>
    <td class="num">${{ favorite.product.price }}</td>
  </tr>
  {% endfor %}
  </tbody>
</table>
<div class="d-grid gap-2 d-md-flex justify-content-md-begin">
  <form action="{% url 'favorites:clear' %}" method="post">
    <input class="btn btn-primary" type="submit" value="Clear">
    {% csrf_token %}
  </form>
</div>
</div>
{% endblock %}